{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"inlineSourceMap": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2016", "dom"],
		"declarationDir": "./dist"
	},
	"include": ["src/*", "src/**/*"]
}
